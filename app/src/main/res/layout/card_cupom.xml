<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_item_list_product_rev2"
        android:backgroundTint="@color/gray_500"
        android:padding="6dp"
        android:layout_margin="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:padding="12dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/image_item_product_list_rev1"
                android:src="@drawable/th"
                android:contentDescription="@string/app_name"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_item_product_name_rev2"
                android:text="@string/app_name"
                android:textSize="18sp"
                android:layout_marginStart="66dp"
                android:layout_alignParentTop="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_item_product_price_rev2"
                android:text="1.0000"
                android:textSize="12sp"
                android:layout_below="@+id/textView_item_product_name_rev2"
                android:layout_marginStart="66dp"/>


            <TextView
                android:id="@+id/textView_item_product_price_rev3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_item_product_name_rev2"
                android:layout_marginStart="66dp"
                android:layout_marginTop="17dp"
                android:text="12/09/2023"
                android:textSize="12sp" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/button_product_add_rev2"
                android:background="@drawable/seta"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>